		var innerHTML = document.getElementById('secuenciaRespuesta').innerHTML;
		innerHTML = innerHTML + "<img class='imagenSeq' src='" + arreglo[imagen] + "' />";
		document.getElementById('secuenciaRespuesta').innerHTML	= innerHTML;
