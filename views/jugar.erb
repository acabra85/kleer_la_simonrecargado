	};

	$( document ).ready(function() {
		setTimeout(function() {
    		$('#secuencia').fadeOut('slow');
    		$('#respuesta').fadeIn('slow');
		}, 1000);
	});

	function agregar(imagen) {
		var innerHTML = document.getElementById('secuenciaRespuesta').innerHTML;
		innerHTML = innerHTML + "<img class='imagenSeq' src='" + arreglo[imagen] + "' />";
		document.getElementById('secuenciaRespuesta').innerHTML	= innerHTML;
		var divRes = document.getElementById('campoRespuesta');
		if(divRes.innerHTML.legth > 0)
			divRes.innerHTML = '["' + imagen + '"]';
		else
			divRes.innerHTML = divRes.innerHTML + ',' + '["' + imagen + '"]';;
		validar();
	}

	function validar() {
		var divSeq = document.getElementById("campoRespuesta");
		var divSeqRes = document.getElementById("campoOriginal");
		if(divSeq === divSeqRes) {
			location.href = "/gano"
		}else {
			location.href = "/perdio"
		}
	
	}
	
